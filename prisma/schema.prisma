generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id           BigInt    @id @default(autoincrement())
  title        String
  amount       Int
  finalAmount Int?       @map("final_amount")
  category     String
  note         String?
  isPaid       Boolean   @default(false) @map("is_paid")
  isSplitBill  Boolean   @default(false) @map("is_split_bill")
  paidAt       DateTime? @map("paid_at") @db.Date
  spentAt      DateTime  @map("spent_at") @db.Date
  paymentId    BigInt?   @map("payment_id")
  payment      Payment?  @relation(fields: [paymentId], references: [id])
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@index([category])
  @@index([spentAt])
  @@index([createdAt])
  @@index([category, spentAt])
  @@index([isPaid])
  @@index([paymentId])
  @@map("expenses")
}

model Payment {
  id          BigInt   @id @default(autoincrement())
  totalAmount Int      @map("total_amount")
  paidAt      DateTime @default(now()) @map("paid_at")
  note        String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  expenses Expense[]

  @@map("payments")
}
