generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id          BigInt   @id @default(autoincrement())
  title       String
  amount      Int
  category    String
  note        String?
  spentAt     DateTime @db.Date
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([spentAt])
  @@index([createdAt])
  @@index([category, spentAt])
  @@map("expenses")
}
